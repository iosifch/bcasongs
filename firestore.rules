rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /songs/{song} {
      // Allow anyone to read songs
      allow read: if true;
      
      // Allow write only if user's email is in the allowed list
      allow write: if request.auth != null && 
                   request.auth.token.email in get(/databases/$(database)/documents/settings/auth).data.allowedEmails;
    }

    match /playlists/{playlist} {
      // Only authenticated users can read playlists
      allow read: if request.auth != null;
      
      // Only whitelisted users can write to playlists
      allow write: if request.auth != null && 
                   request.auth.token.email in get(/databases/$(database)/documents/settings/auth).data.allowedEmails;
    }

    // Only whitelisted users can read the auth settings to see the list
    match /settings/auth {
      allow read: if request.auth != null && 
                   request.auth.token.email in resource.data.allowedEmails;
      allow write: if false; 
    }
  }
}
