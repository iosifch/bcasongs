rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /songs/{song} {
      // Allow anyone to read songs
      allow read: if true;
      
      // Allow write only if user's email is in the allowed list
      allow write: if request.auth != null && 
                   request.auth.token.email in get(/databases/$(database)/documents/settings/auth).data.allowedEmails;
    }

    // Allow public read for settings/auth so UI can check valid users
    // Write restricted to no one (or manual admin only)
    match /settings/auth {
      allow read: if request.auth != null;
      allow write: if false; 
    }
  }
}
